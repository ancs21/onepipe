{
  "name": "@onepipe/sdk",
  "version": "0.4.0",
  "description": "Stream-first developer platform SDK for Bun",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src",
    "!src/**/*.test.ts",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ancs21/onepipe.git",
    "directory": "packages/sdk"
  },
  "homepage": "https://github.com/ancs21/onepipe#readme",
  "bugs": "https://github.com/ancs21/onepipe/issues",
  "license": "MIT",
  "keywords": [
    "bun",
    "sdk",
    "stream",
    "api",
    "rest",
    "flow",
    "database"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "onepipe": "./src/cli.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./cli": "./src/cli.ts"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --external drizzle-orm --external better-auth",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "drizzle-orm": "^0.38.0",
    "zod": "^3.24.0"
  },
  "peerDependencies": {
    "better-auth": "^1.0.0",
    "drizzle-orm": "^0.38.0"
  },
  "peerDependenciesMeta": {
    "better-auth": {
      "optional": true
    },
    "drizzle-orm": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.0"
  }
}
