{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["@types/bun"],
    "paths": {
      "@onepipe/sdk": ["./packages/sdk/src"],
      "@onepipe/runtime": ["./packages/runtime/src"],
      "@onepipe/cli": ["./packages/cli/src"],
      "@onepipe/dashboard": ["./packages/dashboard/src"],
      "@onepipe/mcp-server": ["./packages/mcp-server/src"],
      "@onepipe/deploy": ["./packages/deploy/src"]
    }
  },
  "exclude": ["node_modules", "dist", "packages", "examples"]
}
